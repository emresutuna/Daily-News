<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".CategoryActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:text="Haber Kategorisi Seçiniz"
                    android:textSize="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_margin="20dp"
                android:background="@drawable/linearshape"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/busines" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:text="İş Dünyası"

                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="24dp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="20dp"
                android:background="@drawable/linearshape"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/magazine" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:text="Magazin"

                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="24dp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="20dp"
                android:background="@drawable/linearshape"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/health2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:text="Sağlık"

                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="24dp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="20dp"
                android:background="@drawable/linearshape"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/science" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:text="Bilim"

                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="24dp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="20dp"
                android:background="@drawable/linearshape"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/sport" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:text="Spor"

                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="24dp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="20dp"
                android:background="@drawable/linearshape"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tech" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:text="Teknoloji"

                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="24dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    </android.support.constraint.ConstraintLayout>
